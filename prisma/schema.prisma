generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String   @id @default(cuid())
    email    String   @unique
    name     String?
    password String
    plants  Plant[]
}

model Plant {
    id          String   @id @default(cuid())
    name        String
    origin      String?
    description String?
    userId      String
    type        String
    user        User     @relation(fields: [userId], references: [id])
    image      String?
    requirements Requirement[]
}

model Requirement{
    id          String   @id @default(cuid())
    plantId     String
    plant       Plant    @relation(fields: [plantId], references: [id])
    name        String
    description String?
    value       Int
    unit        String
    type        String
    received    Int      @default(0)
}